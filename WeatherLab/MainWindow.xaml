<Window x:Class="WeatherLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SpeechLab" Height="650" MinHeight="480" Width="1000" MinWidth="640" Background="#FFEFEFF4" WindowStyle="ThreeDBorderWindow">
    
    <Window.Resources>
        <Image x:Key="micIcon" Source="Resources/mic.png"/>
        <Style TargetType="{x:Type ProgressBar}">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="CornflowerBlue"/>
            <Setter Property="Background" Value="#FFEFEFF4"/>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFA7A7AB"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="test" Content="Запись остановлена" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="phrase" Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" TextAlignment="Center" FontSize="30" FontStyle="Italic" Foreground="DimGray" TextWrapping="WrapWithOverflow"/>
        <TextBlock x:Name="text" Grid.Column="0" Grid.Row="2" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="30" TextWrapping="WrapWithOverflow"/>

        <ProgressBar x:Name="levelMeter1" Value="0" Grid.Column="2" Grid.Row="2" Margin="5,5,0,0" Width="20" Orientation="Vertical" HorizontalAlignment="Left"/>
        <ProgressBar x:Name="levelMeter2" Value="0" Grid.Column="2" Grid.Row="2" Margin="0,5,5,0" Width="20" Orientation="Vertical" HorizontalAlignment="Right"/>
        <Image x:Name="recordButton" Source="Resources/mic.png" PreviewMouseDown="StartRecording" PreviewMouseUp="StopRecording" Grid.Column="2" Grid.Row="2" Margin="25"  Height="{Binding ElementName=recordButton, Path=Width}" VerticalAlignment="Center" />
        <Rectangle x:Name="horizLine1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Rectangle x:Name="vertLine" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
