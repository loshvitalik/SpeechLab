<Window x:Class="WeatherLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Speech-to-Weather" Height="650" MinHeight="480" Width="1000" MinWidth="640" Background="#FFEFEFF4" WindowStyle="ThreeDBorderWindow">
    
    <Window.Resources>
        <Image x:Key="micIcon" Source="Resources/mic.png"/>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFA7A7AB"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Запись остановлена" x:Name="test" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button x:Name="recordButton" PreviewMouseDown="StartRecording" PreviewMouseUp="StopRecording" Grid.Column="2" Grid.Row="2" Margin="16" Content="{StaticResource micIcon}" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Height="{Binding ElementName=recordButton, Path=Width}" VerticalAlignment="Center" />

        <Rectangle x:Name="horizLine1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Rectangle x:Name="vertLine" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
